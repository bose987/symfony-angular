{
    "name": "bayne/symfony-angular-todomvc",
    "license": "MIT",
    "type": "project",
    "description": "An implementation of TodoMVC using AngularJS and Symfony2 Rest Edition",
    "autoload": {
        "psr-0": { "": "src/" }
    },
    "require": {
        "php": ">=5.6",
        "ext-soap": "*",
        "symfony/symfony": "~2.7",
        "symfony/assetic-bundle": "~2.6",
        "symfony/swiftmailer-bundle": "~2.3",
        "symfony/monolog-bundle": "~2.7",
        
        "doctrine/orm": "~2.5",
        "doctrine/doctrine-bundle": "~1.5",
        
        "twig/extensions": "~1.2",
        
        "sensio/distribution-bundle": "~4.0",
        "sensio/framework-extra-bundle": "~3.0",
        "sensio/generator-bundle": "~2.5",
        
        "jms/serializer-bundle": "~1.0",
        
        "friendsofsymfony/rest-bundle": "~1.7",
        
        "nelmio/api-doc-bundle": "~2.9",
        
        "omnipay/omnipay": "~2.0",
        
        "willdurand/hateoas-bundle": "~1.0",
        "willdurand/rest-extra-bundle": "~1.0",
        
        "hautelook/templated-uri-bundle": "~2.0",
        
        "incenteev/composer-parameter-handler": "~2.1"

    },
    "conflict": {
        "symfony/routing": "2.4.1"
    },
    "scripts": {
        "pre-install-cmd": [
            "Acme\\DemoBundle\\HerokuDatabase::populateEnvironment"
        ],
        "post-install-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile"
        ],
        "post-update-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile"
        ]
    },
    "config": {
        "bin-dir": "bin"
    },
    "minimum-stability": "stable",
    "extra": {
        "incenteev-parameters": {
			"keep-outdated": true,
            "file": "app/config/parameters.yml",
            "env-map": {
              "database_host": "DATABASE_HOST",
              "database_port": "DATABASE_PORT",
              "database_name": "DATABASE_NAME",
              "database_user": "DATABASE_USER",
              "database_password": "DATABASE_PASSWORD"
            }
        },
        "symfony-app-dir": "app",
        "symfony-web-dir": "web",
        "branch-alias": {
            "dev-master": "2.3-dev"
        },
        "heroku": {
            "framework": "symfony2"
        }
    }
}
